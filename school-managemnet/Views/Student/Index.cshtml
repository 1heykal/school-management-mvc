@model IEnumerable<Student>
@{
    Layout = "~/views/shared/_Layout1.cshtml";
    ViewBag.Title = "Index";
}

    <a href="/Student/create" class="btn btn-success">Create</a>
    <a href="/Department/index" class="btn btn-info">Departments</a>
    <table class="table table-hover table-bordered">
        <thead>
            <tr><th>ID</th> <th>Name</th> <th>Age</th> <th>Email</th> <th>Dept</th> <th>Operations</th></tr>
        </thead>
        <tbody>
            @foreach(var s in Model)
            {
               <tr>
                   <td>@s.Id</td>
                   <td>@s.Name</td>
                   <td>@s.Age</td>
                   <td>@s.Email</td>
                   <td>@s.Department?.Name</td>
                   <td>
                       <a href="/Student/Details/@s.Id" class="btn btn-info">Details</a>
                       <a href="/Student/Edit/@s.Id" class="btn btn-success">Update</a>
                       <a href="/Student/Delete/@s.Id" class="btn btn-danger">Delete</a>

                   </td>
               </tr>
            }
        </tbody>
    </table>

